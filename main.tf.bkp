terraform {
  required_providers {
    proxmox = {
      source  = "telmate/proxmox"
      version = "3.0.2-rc01"
    }
  }
}

provider "proxmox" {

      pm_tls_insecure = true
      pm_api_url = "https://10.5.6.231:8006/api2/json"
      pm_password = "Admin247rack"
      pm_user = "root@pam"

}

resource "proxmox_vm_qemu" "worker01" {
    name = "worker01"
    desc = "worker01"

    # Node name has to be the same name as within the cluster
    # this might not include the FQDN
    target_node = "laxvpsied01"

    # The destination resource pool for the new VM - Pool not a storage
    # pool = "local-ssd"

    # The template name to clone this vm from
    clone = "cloudtest"

    # Activate QEMU agent for this VM
    agent = 1

    os_type = "cloud-init"
    memory = 4096
    scsihw = "virtio-scsi-pci"

    cpu {
        cores = 2
        sockets = 1
        type = "x86-64-v2-AES"
    }

    disks {
            ide {
                ide0 {
                    cloudinit {
                        storage = "local-ssd"
                    }
                }
            }
            virtio {
                virtio0 {
                    disk {
                        size            = 10
                        # cache           = "writeback"
                        storage         = "local-ssd"
                        iothread        = true
                        discard         = true
                    }
                }
            }
        }

    # Setup the network interface and assign a vlan tag: 256
    network {
        id = 0
        model = "virtio"
        bridge = "vmbr10"
        tag = 92
    }

    # Setup the ip address using cloud-init.
    boot = "order=virtio0"
    # Keep in mind to use the CIDR notation for the ip.
    ipconfig0 = "ip=10.5.6.34/24,gw=10.5.6.10"

    sshkeys = <<EOF
    ssh-rsa  amattar@proton.me
    EOF
}